{
	"name": "@jcbyte/firebase-live-state",
	"version": "1.0.4",
	"description": "Provides a React hook for synchronising a state variable with a Firebase Realtime Database at a given path.",
	"author": "Joel Cutler",
	"license": "Apache-2.0",
	"homepage": "https://github.com/jcbyte/firebase-live-state#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jcbyte/firebase-live-state.git"
	},
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "tsc",
		"prepare": "npm run build",
		"publish:npm": "npm publish --registry=https://registry.npmjs.org",
